{
	"compilerOptions": {
		"baseUrl": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"outDir": "./dist",
		"paths": { "@/*": ["./*"] },
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
